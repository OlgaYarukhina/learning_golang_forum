{{template "base" .}}
{{define "title"}}Post #{{.SinglePost.ID}}{{end}}
{{define "main"}}
    {{with .SinglePost}}
    <div class='post'>
        <div class='metadata'>
            <strong>{{.Title}}</strong>
            <span>#{{.ID}}</span>
            <br>
        </div>
        {{.Content}}
        <br><br>
        <div><b>Category:</b> {{range .Category_name}} {{.}} {{end}}</div>
        <div class='metadata'>
            <time><b>Posted at: </b>{{.Created_at}}</time>
        </div>
    </div>
    {{end}}
    <br>
    <b>Comments: </b>
    {{range.DataComment}}
        <div class='comments'>
            <span><b>{{.Username}} </b>({{.Created_at}}):
            <br>
            {{.Comment}}
        </div>
    {{end}}
    {{ if eq .CheckLogin true }}
    <div>
    {{ with .SinglePost}}
    <form method="POST" action="/post?id={{.ID}}">
    {{ end}}
    <input type="text" name="comment">
    <input type="submit">
    </form>
    </div>
    {{end}}
{{end}}