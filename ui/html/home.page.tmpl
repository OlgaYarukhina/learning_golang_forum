<!doctype html>

{{template "base" .}}

{{define "title"}}Home page{{end}}

{{define "main"}}

<div class="container">
  <div class="row">
    <div class="col-9">
      <table>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>ID</th>
          <th>Category</th>
          <th>Like</th>
          <label for="categories">Choose a category:</label>
          <form id="filter-form">
              <select onchange="this.form.submit()" name="categories" id="categories">
                <option value=""></option>
                {{
                  range.DataCategories
                }}
                <option value="{{.ID}}">{{.Name}}</option>
                {{
                  end
                }}
              </select>
          </form>
        </tr>
        {{
          range.DataPost
        }}
        <tr>
          <td>
            <a href="/post?id={{.ID}}">{{.Title}}</a>
          </td>
          <td>{{.Created_at}}</td>
          <td>#{{.ID}}</td>
          <td>{{range .Category_name}} {{.}} {{end}}</td>
          <td><a href="/like?id={{.ID}}">üëç{{.Like}}</a></td>
        </tr>
        {{
          end
        }}
      </table>
    </div>
    <div class="col-3">
      <p>In order to post, comment and like you have to log in!</p>
      <p></p>

      <a role="button" class="btn btn-dark" href="/my-workspace">Create a post</a>
        <p></p>
    </div>
  </div>
</div>
</div>





<p></p>


{{end}}